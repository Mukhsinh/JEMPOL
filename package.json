{
  "name": "complaint-management-system",
  "version": "1.0.0",
  "description": "Sistem Manajemen Keluhan dengan Supabase Backend",
  "private": true,
  "workspaces": [
    "kiss"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=kiss",
    "dev:api": "vercel dev --listen 3004",
    "dev:full": "concurrently \"npm run dev:api\" \"npm run dev --workspace=kiss\"",
    "build": "npm run build --workspace=kiss",
    "build:skip-check": "npm run build:skip-check --workspace=kiss",
    "build:deploy": "npm run build:deploy --workspace=kiss",
    "vercel-build": "npm run vercel-build --workspace=kiss",
    "postbuild": "node verify-build.js",
    "test": "npm run test --workspace=kiss",
    "verify-deployment": "node verify-deployment.js",
    "check-env": "node check-env.js",
    "test-build": "node test-build.js",
    "verify-vercel": "node verify-vercel-ready.js",
    "test-build-vercel": "node test-build-vercel.js",
    "predeploy": "npm run verify-vercel"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@vercel/node": "^3.0.12",
    "dotenv": "^17.3.1"
  }
}