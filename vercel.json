{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/index.ts": {
      "memory": 3008,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/index"
    },
    {
      "source": "/api/auth/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/complaints/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/reports/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/users/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/master-data/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/roles/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/response-templates/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/qr-codes/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/escalation/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/escalation-rules/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/escalation-stats/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/ai-trust-settings/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/external-tickets/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/ai-escalation/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/app-settings/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/ebooks/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/notification-settings/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/ticket-actions/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/units/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/service-categories/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/api/public/track-ticket",
      "destination": "/api/public/track-ticket"
    },
    {
      "source": "/api/public/app-settings",
      "destination": "/api/public/app-settings"
    },
    {
      "source": "/api/public/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, Accept"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ]
}