{
  "version": 2,
  "buildCommand": "npm install && cd kiss && npm install && npm run vercel-build",
  "outputDirectory": "kiss/dist",
  "installCommand": "npm install --legacy-peer-deps && cd kiss && npm install --legacy-peer-deps",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/form/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/m/:code",
      "destination": "/index.html"
    },
    {
      "source": "/survey/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/lacak-tiket",
      "destination": "/index.html"
    },
    {
      "source": "/track-ticket",
      "destination": "/index.html"
    },
    {
      "source": "/tiket-eksternal/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, Accept"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; img-src 'self' data: blob: http: https: https://quickchart.io https://api.qrserver.com; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://quickchart.io https://api.qrserver.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; script-src 'self' 'unsafe-inline' 'unsafe-eval';"
        }
      ]
    }
  ]
}
